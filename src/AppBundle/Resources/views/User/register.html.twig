{% extends "AppBundle::layout.html.twig" %}

{% block title %}AppBundle:User:register{% endblock %}

{% block body %}
    <div class="root">

        <div class="row">
            <div class="col s8 push-l2">

                {% for error in errors %}
                    <div class="card-panel red lighten-1">{{ error }}</div>
                {% endfor %}

                {{ form_start(form) }}

                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        {{ form_widget(form.username, { 'attr' : { 'class' : 'validate' } }) }}
                        {{ form_label(form.username, 'Nom d\'utilisateur') }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock</i>
                        {{ form_widget(form.plainPassword.first, { 'attr' : { 'class' : 'validate' } }) }}
                        {{ form_label(form.plainPassword.first, 'Mot de passe') }}
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock</i>
                        {{ form_widget(form.plainPassword.second, { 'attr' : { 'class' : 'validate' } }) }}
                        {{ form_label(form.plainPassword.second) }}
                    </div>
                </div>
                <button class="waves-effect waves-ligth btn light-blue darken-2" type="submit"> Valider </button>

                {{ form_end(form) }}
            </div>
        </div>

    </div>

{% endblock %}
